package q1;

import java.util.Random;
import java.util.Scanner;

/**
 *
 * @author xiaowei
 */
public class Q1 {
    public static void main(String[] args) {
        Scanner k = new Scanner(System.in);
        Random rand = new Random();
        
        int studyHour, sleepHour, breaks = -1;
       
        //Prompt user
        while (true){
            System.out.print("Enter hours studied: ");
            studyHour = k.nextInt();
            if (studyHour >= 0 && studyHour <= 24){
                break;}
            else{
                System.out.println("Error! The hours studied must between 0 to 24 hours!");
        }
        }
  
        while (true){
            System.out.print("Enter hours slept: ");
            sleepHour = k.nextInt();
            if (sleepHour >= 0 && sleepHour <= 24){
                break;}
            else{
                System.out.println("Error! The hours slept must between 0 to 24 hours!");
        }
        }
        
        while (true){
            System.out.print("Enter breaks taken: ");
            breaks = k.nextInt();
            if (breaks >= 0 && breaks <= 10){
                break;}
            else{
                System.out.println("Error! Please enter a realistic value!");
        }
        }

        //Calculation
        int score = (studyHour*10)+(sleepHour*2)-(breaks*2);
        System.out.println("Your productivity score is "+score);
        if (score>60){
            System.out.println("Excellent! Keep up the great work!");
        }
        else if (score>=30 && score<=60){
            System.out.println("Good effort, but balance your breaks!");
        }
        else {
            System.out.println("Try to plan your day better!");
        }
        
        //Tip of the day
        int tips = rand.nextInt(5);
        switch (tips){
            case 0 : System.out.println("Revise your notes before sleeping.");
            break;
            case 1 : System.out.println("Take short breaks to refresh yourself.");
            break;
            case 2 : System.out.println("Create your own timetable to work effectively.");
            break;
            case 3 : System.out.println("Drink more water to stay hydrated and healthy.");
            break;
            case 4 : System.out.println("Keep distractions away and stay focus.");
        }
        k.close();
    }
        }
